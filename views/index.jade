extends layout

block content
  h1= title
  if nombre
    p Welcome to #{title}, 
      strong #{nombre}
  else
    p Welcome to #{title}

  script(src="https://cdn.socket.io/socket.io-1.3.5.js")
  script.
    var socket = io.connect('http://localhost:3000/');
    socket.on('news', function (data) {
      console.log(data);
      socket.emit('my other event', { my: 'data' });
    })